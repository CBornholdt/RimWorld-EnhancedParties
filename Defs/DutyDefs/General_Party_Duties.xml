<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DutyDef>
  	<defName>EP_MakeThingsToFocus</defName>
  	<socialModeMax>Off</socialModeMax>
  	<hook>MediumPriority</hook>
  	<thinkNode Class="ThinkNode_Priority">
  		<subNodes>

  			<li Class="DutyConditional_HasEnoughThingsAvailable">
  				<subNodes>

  					<li Class="DutyConditional_HasEnoughThingsAtFocus">
  						<subNodes>
  							<li Class="ThinkNode_DutyTaskComplete">
  							</li>
  						</subNodes>
  					</li>

  					<li Class="DutyConditional_HasEnoughThingsAtFocus">
  						<invert>true</invert>
  						<subNodes>
  							<li Class="DutyJob_BringThingsToFocus">
  							</li>
  						</subNodes>
  					</li>

  				</subNodes>
  			</li>

  			<li Class="DutyConditional_HasEnoughThingsAvailable">
  				<invert>true</invert>
  				<subNodes>
  					<li Class="DutyJob_PerformDutyRecipe">
  					</li>
  				</subNodes>
  			</li>

  			<li Class="ThinkNode_Logger">
  				<subNodes>
  					<li Class="DutyJob_WanderNearFocus">
  					</li>
  				</subNodes>
  			</li>

  		</subNodes>
  	</thinkNode>
  </DutyDef>

  <DutyDef>
    <defName>EP_GotoAndCleanFocusRoom</defName>
    <socialModeMax>Off</socialModeMax>
    <hook>MediumPriority</hook>
    <thinkNode Class="ThinkNode_Priority">
      <subNodes>
        <!-- Goto party spot -->
        <li Class="ThinkNode_Logger"/>
        <li Class="JobGiver_GotoTravelDestination">
          <exactCell>true</exactCell>
          <locomotionUrgency>Jog</locomotionUrgency>
        </li>

        <li Class="DutyConditional_InPartyArea">
          <subNodes>
            <li Class="JobGiver_CleanRoom">
            </li>
            <li Class="DutyJob_WanderInDutyArea">
              <ticksBetweenWandersRange>
                <min>50</min>
                <max>250</max>
              </ticksBetweenWandersRange>
            </li>
          </subNodes>
        </li>
      </subNodes>
    </thinkNode>
  </DutyDef>

  <DutyDef>     <!-- based on Default Party duty   -->
    <defName>EP_GenericParty</defName>
    <hook>MediumPriority</hook>
    <thinkNode Class="ThinkNode_Priority">
      <subNodes>
        <li Class="DutyConditional_InPartyArea">
          <subNodes>
            <!-- Eat -->
            <li Class="ThinkNode_ConditionalRandom">
              <chance>0.05</chance>
              <subNodes>
                <li Class="DutyJob_EatInDutyArea" />
              </subNodes>
            </li>
            
            <!-- Stand where you are and be socially active -->
            <li Class="ThinkNode_ConditionalRandom">
              <chance>0.35</chance>
              <subNodes>
                <li Class="JobGiver_StandAndBeSociallyActive">
                  <ticksRange>
                    <min>350</min>
                    <max>750</max>
                  </ticksRange>
                </li>
              </subNodes>
            </li>
            
            <!-- Get joy -->
            <li Class="ThinkNode_ConditionalRandom">
              <chance>0.1</chance>
              <subNodes>
                <li Class="DutyJob_GetJoyInDutyArea" />
              </subNodes>
            </li>
            
            <!-- Wander -->
            <li Class="DutyJob_WanderNearFocus">
              <ticksBetweenWandersRange>
                <min>50</min>
                <max>250</max>
              </ticksBetweenWandersRange>
            </li>
          </subNodes>
        </li>
        
        <!-- Reach the party area -->
        <li Class="DutyJob_WanderNearFocus">
          <ticksBetweenWandersRange>
            <min>50</min>
            <max>250</max>
          </ticksBetweenWandersRange>
          <locomotionUrgency>Jog</locomotionUrgency>
        </li>
      </subNodes>
    </thinkNode>
  </DutyDef>
</Defs>
